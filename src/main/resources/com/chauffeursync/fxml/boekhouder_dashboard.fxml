<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600">

    <top>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="nameLabel" text="Naam:" style="-fx-font-size: 16px;" />
            <Label fx:id="emailLabel" text="E-mail:" />
            <Button fx:id="logoutButton" text="Uitloggen" onAction="#handleLogout" />
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="shiftScrollPane">
            <VBox fx:id="shiftBox" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
